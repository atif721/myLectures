<%- include("../partials/head") %>
</head>
  <body class="bg-linear-to-br from-gray-50 via-gray-100 to-gray-50">
  <%- include("../partials/header") %>
    <main class="min-h-screen flex items-center justify-center py-12 px-4">
      <div class="w-full max-w-md">
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden transform transition">
          <!-- Header Section -->
          <div class="bg-linear-to-r from-red-500 to-red-600 px-8 py-10">
            <h1 class="text-4xl font-bold text-white text-center mb-2">Create Account</h1>
            <p class="text-red-100 text-center text-sm">Join our community today</p>
          </div>
          <!-- Form Section -->
          <form action="/signup" method="POST" class="px-8 py-10 space-y-6">

            <%- include('../partials/errors') %>
            <!-- Name Fields -->
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">First Name</label>
                <input
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                  type="text"
                  name="firstName"
                  value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
                  placeholder="First" 
                  required
                />
              </div>
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Last Name</label>
                <input
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                  type="text"
                  name="lastName"
                  value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
                  placeholder="Last" 
                />
              </div>
            </div>

            <!-- Email -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
              <input
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                type="email"
                name="email"
                value="<%= oldInput.email ? oldInput.email : '' %>"
                placeholder="you@example.com" 
                required
              />
            </div>

            <!-- Password Fields -->
            <div class="space-y-4">
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
                <input
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                  type="password"
                  name="password"
                  value="<%= oldInput.password ? oldInput.password : '' %>"
                  placeholder="At least 8 characters" 
                  required
                />
              </div>
              <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">Confirm Password</label>
                <input
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                  type="password"
                  name="confirmPassword"
                  value="<%= oldInput.confirmPassword ? oldInput.confirmPassword : '' %>"
                  placeholder="Confirm your password" 
                  required
                />
              </div>
            </div>

            <!-- User Type Selection -->
            <div class="bg-gray-50 p-6 rounded-lg border border-gray-200">
              <p class="text-sm font-semibold text-gray-700 mb-4">Account Type</p>
              <div class="space-y-3">
                <label class="flex items-center p-3 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-red-500 hover:bg-red-50 transition">
                  <input type="radio" name="userType" value="guest" checked="<% oldInput.userType=== "guest" %>" class="w-5 h-5 text-red-500 cursor-pointer" />
                  <span class="ml-3 font-medium text-gray-700">Guest</span>
                  <span class="ml-auto text-xs text-gray-500">Find amazing places</span>
                </label>
                <label class="flex items-center p-3 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-red-500 hover:bg-red-50 transition">
                  <input type="radio" name="userType" value="host" checked="<% oldInput.userType=== "host" %>"  class="w-5 h-5 text-red-500 cursor-pointer" />
                  <span class="ml-3 font-medium text-gray-700">Host</span>
                  <span class="ml-auto text-xs text-gray-500">Share your space</span>
                </label>
              </div>
            </div>

            <!-- Terms and Conditions -->
            <label class="flex items-start p-4 bg-blue-50 rounded-lg border border-blue-200 cursor-pointer hover:bg-blue-100 transition">
              <input type="checkbox" name="terms" class="w-5 h-5 text-red-500 mt-1 cursor-pointer shrink-0" required />
              <span class="ml-3 text-sm text-gray-700">
                I agree to the <a href="#" class="font-semibold text-red-500 hover:text-red-600">terms and conditions</a> and <a href="#" class="font-semibold text-red-500 hover:text-red-600">privacy policy</a>
              </span>
            </label>

            <!-- Submit Button -->
            <button type="submit" class="w-full bg-linear-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white font-bold py-3 px-4 rounded-lg transition transform hover:scale-105 shadow-md">
              Create Account
            </button>

            <!-- Login Link -->
            <p class="text-center text-gray-600 text-sm">
              Already have an account? <a href="/login" class="font-semibold text-red-500 hover:text-red-600">Sign In</a>
            </p>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
