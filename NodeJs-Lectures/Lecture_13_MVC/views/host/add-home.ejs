<%- include("../partials/head") %>
</head>
  <body>
  <%- include("../partials/header") %>
    <main class="flex flex-col gap-5 items-center container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold text-center text-gray-800">Register Your Home on AirBnB</h1>
      <div class="">
        <form action="/host/add-home" method="POST" class="flex flex-col gap-5 w-110.5">
          <div>
            <input
            class="w-full px-4 py-2 mb-2 rounded-md outline outline-gray-400 focus:outline-none focus:ring-2 focus:ring-red-500 rounded-sm"
            type="text"
            name="houseName"
            id=""
            placeholder="Enter Your House Name" />
            <input
            class="w-full px-4 py-2 mb-2 rounded-md outline outline-gray-400  focus:outline-none focus:ring-2 focus:ring-red-500 rounded-sm"
            type="text"
            name="price"
            id=""
            placeholder="Price Per Night" />
            <input
            class="w-full px-4 py-2 mb-2 rounded-md outline outline-gray-400  focus:outline-none focus:ring-2 focus:ring-red-500 rounded-sm"
            type="text"
            name="location"
            id=""
            placeholder="Enter Location" />
            <input
            class="w-full px-4 py-2 mb-2 rounded-md outline outline-gray-400  focus:outline-none focus:ring-2 focus:ring-red-500 rounded-sm"
            type="text"
            name="rating"
            id=""
            placeholder="Rating" />
            <input
            class="w-full px-4 py-2 mb-2 rounded-md outline outline-gray-400  focus:outline-none focus:ring-2 focus:ring-red-500 rounded-sm"
            type="text"
            name="photoURL"
            id=""
            placeholder="Enter photoURL" />
          </div>
          <button type="submit" class="bg-[#ff5a5f] text-white p-2 cursor-pointer rounded-sm">Submit</button>
        </form>
      </div>
    </main>
  </body>
</html>
