<%- include("../partials/head") %>
</head>
  <body>
  <%- include("../partials/header") %>
    <main class="flex flex-col gap-5 items-center container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
      <h1 class="text-3xl font-bold text-center text-gray-800"><%= editing ? "Edit" : "Register"%> Your Home on AirBnB</h1>
      <div class="">
        <form action="/host/<%= editing ? 'edit-home' : 'add-home'%>" method="POST" class="flex flex-col gap-5 w-110.5">
          <div>
            <input type="hidden" name="id" value="<%=editing ? home._id : ''%>"/>
            <input
            class="w-full px-4 py-2 mb-2 rounded-md outline outline-gray-400 focus:outline-none focus:ring-2 focus:ring-red-500 rounded-sm"
            type="text"
            name="houseName"
            value="<%= editing ? home.houseName : ''%>"
            id=""
            placeholder="Enter Your House Name" />
            <input
            class="w-full px-4 py-2 mb-2 rounded-md outline outline-gray-400  focus:outline-none focus:ring-2 focus:ring-red-500 rounded-sm"
            type="text"
            name="price"
            value="<%= editing ? home.price : ''%>"
            id=""
            placeholder="Price Per Night" />
            <input
            class="w-full px-4 py-2 mb-2 rounded-md outline outline-gray-400  focus:outline-none focus:ring-2 focus:ring-red-500 rounded-sm"
            type="text"
            name="location"
            value="<%= editing ? home.location : ''%>"
            id=""
            placeholder="Enter Location" />
            <input
            class="w-full px-4 py-2 mb-2 rounded-md outline outline-gray-400  focus:outline-none focus:ring-2 focus:ring-red-500 rounded-sm"
            type="text"
            name="rating"
            value="<%= editing ? home.rating : ''%>"
            id=""
            placeholder="Rating" />
            <input
            class="w-full px-4 py-2 mb-2 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"
            type="file"
            accept="image/"
            name="photo"
            id="" />
            <textarea rows="5"
            class="w-full px-4 py-2 mb-2 rounded-md outline outline-gray-400  focus:outline-none focus:ring-2 focus:ring-red-500 rounded-sm"
            name="description"
            placeholder="Enter Description" ><%= editing ? home.description : ''%></textarea>
          </div>
          <button type="submit" class="bg-[#ff5a5f] text-white p-2 cursor-pointer rounded-sm"><%=editing ? "Update" : "Submit"%></button>
        </form>
      </div>
    </main>
  </body>
</html>
