<%- include("../partials/head") %>
</head>
  <body class="bg-linear-to-br from-gray-50 via-gray-100 to-gray-50">
  <%- include("../partials/header") %>
    <main class="min-h-screen flex items-center justify-center py-12 px-4">
      <div class="w-full max-w-md">
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden transform transition">
          <!-- Header Section -->
          <div class="bg-linear-to-r from-red-500 to-red-600 px-8 py-10">
            <h1 class="text-4xl font-bold text-white text-center mb-2">Welcome Back</h1>
            <p class="text-red-100 text-center text-sm">Sign in to your account</p>
          </div>

          <!-- Form Section -->
          <form action="/login" method="POST" class="px-8 py-10 space-y-6">
          <%- include('../partials/errors') %>
            <!-- Email -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
              <input
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                type="email"
                name="email"
                value="<%= oldInput.email ? oldInput.email : '' %>"
                placeholder="you@example.com" 
                required
              />
            </div>

            <!-- Password -->
            <div>
              <label class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
              <input
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                type="password"
                name="password"
                placeholder="Enter your password" 
                required
              />
            </div>

            <!-- Submit Button -->
            <button type="submit" class="w-full bg-linear-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white font-bold py-3 px-4 rounded-lg transition transform hover:scale-105 shadow-md">
              Sign In
            </button>

            <!-- Signup Link -->
            <p class="text-center text-gray-600 text-sm">
              Don't have an account? <a href="/signup" class="font-semibold text-red-500 hover:text-red-600">Create one</a>
            </p>
          </form>
        </div>
      </div>
    </main>
  </body>
</html>
